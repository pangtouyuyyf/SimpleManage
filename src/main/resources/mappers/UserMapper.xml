<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.simple.manage.system.dao.UserDao">
    <sql id="baseColumnList">
        user_id,
        user_name,
        login_name,
        password,
        phone,
        email,
        role_id,
        exta,
        extb,
        create_id,
        create_time,
        update_id,
        update_time,
        is_delete
    </sql>

    <resultMap id="userMap" type="com.simple.manage.system.entity.User">
        <id property="id" column="user_id" javaType="java.lang.Integer"/>
        <result property="name" column="user_name" javaType="java.lang.String"/>
        <result property="loginName" column="login_name" javaType="java.lang.String"/>
        <result property="password" column="password" javaType="java.lang.String"/>
        <result property="phone" column="phone" javaType="java.lang.String"/>
        <result property="email" column="email" javaType="java.lang.String"/>
        <result property="roleId" column="role_id" javaType="java.lang.Integer"/>
    </resultMap>

    <select id="checkUser" parameterType="java.lang.Integer" resultType="java.lang.Integer">
        SELECT COUNT(user_id)
        FROM t_usermst
        WHERE is_delete = '0'
        AND user_id = #{user_id}
    </select>

    <insert id="addUser" parameterType="java.util.Map" useGeneratedKeys="true" keyProperty="user_id">
        INSERT INTO t_usermst
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="user_name != null and user_name != ''">
                user_name,
            </if>
            <if test="login_name != null and login_name != ''">
                login_name,
            </if>
            <if test="password != null and password != ''">
                password,
            </if>
            <if test="phone != null and phone != ''">
                phone,
            </if>
            <if test="email != null and email != ''">
                email,
            </if>
            <if test="exta != null and exta != ''">
                exta,
            </if>
            <if test="extb != null and extb != ''">
                extb,
            </if>
            <if test="create_id != null">
                create_id,
            </if>
            <if test="create_time != null">
                create_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="user_name != null and user_name != ''">
                #{user_name},
            </if>
            <if test="login_name != null and login_name != ''">
                #{login_name},
            </if>
            <if test="password != null and password != ''">
                #{password},
            </if>
            <if test="phone != null and phone != ''">
                #{phone},
            </if>
            <if test="email != null and email != ''">
                #{email},
            </if>
            <if test="exta != null and exta != ''">
                #{exta},
            </if>
            <if test="extb != null and extb != ''">
                #{extb},
            </if>
            <if test="create_id != null">
                #{create_id},
            </if>
            <if test="create_time != null">
                #{create_time},
            </if>
        </trim>
    </insert>

    <update id="updUser" parameterType="java.util.Map">
        UPDATE t_usermst
        <set>
            <if test="user_name != null and user_name != ''">
                user_name = #{user_name},
            </if>
            <if test="login_name != null and login_name != ''">
                login_name = #{login_name},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="exta != null and exta != ''">
                exta = #{exta},
            </if>
            <if test="extb != null and extb != ''">
                extb = #{extb},
            </if>
            <if test="update_id != null">
                update_id = #{update_id},
            </if>
            <if test="update_time != null">
                update_time = #{update_time},
            </if>
        </set>
        WHERE user_id = #{user_id}
    </update>

    <select id="queryUserEntity" parameterType="java.util.Map" resultMap="userMap">
        SELECT
        <include refid="baseColumnList"/>
        FROM t_usermst WHERE 1 = 1 AND is_delete = '0'
        <if test="user_id != null">
            AND user_id = #{user_id}
        </if>
        <if test="email != null and email != ''">
            AND email = #{email}
        </if>
        <if test="login_name != null and login_name !=''">
            AND login_name = #{login_name}
        </if>
        <if test="password != null and password != ''">
            AND password = #{password}
        </if>
        <if test="phone != null and phone != ''">
            AND phone = #{phone}
        </if>
    </select>

    <select id="queryUser" parameterType="java.lang.Integer" resultType="java.util.Map">
        SELECT
            user_id AS id,
            user_name AS "name",
            login_name AS "loginName",
            phone,
            email
        FROM t_usermst
        WHERE 1 = 1
        AND is_delete = '0'
        AND user_id = #{userId}
    </select>

    <select id="queryUserList" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            user_id AS id,
            user_name AS "name",
            login_name AS "loginName",
            phone,
            email
        FROM t_usermst
        WHERE 1 = 1
        AND is_delete = '0'
        <if test="user_id != null">
            AND user_id = #{user_id}
        </if>
        <if test="user_name != null and user_name != ''">
            AND user_name LIKE CONCAT('%', #{user_name}, '%')
        </if>
        <if test="login_name != null and login_name != ''">
            AND login_name LIKE CONCAT('%', #{login_name}, '%')
        </if>
        <if test="phone != null and phone != ''">
            AND phone LIKE CONCAT('%', #{phone}, '%')
        </if>
        <if test="email != null and email != ''">
            AND email LIKE CONCAT('%', #{email}, '%')
        </if>
        ORDER BY user_id ASC
    </select>

    <delete id="delUser" parameterType="java.util.Map">
        UPDATE t_usermst
        <set>
            <if test="update_id != null">
                update_id = #{update_id},
            </if>
            <if test="update_time != null">
                update_time = #{update_time},
            </if>
            <if test="is_delete != null and is_delete !=''">
                is_delete = #{is_delete},
            </if>
        </set>
        WHERE
        1 = 1
        AND is_delete = '0'
        AND user_id = #{user_id}
    </delete>

    <delete id="delUserForReal" parameterType="java.lang.Integer">
        DELETE
        FROM
        t_usermst
        WHERE user_id = #{userId}
    </delete>
</mapper>