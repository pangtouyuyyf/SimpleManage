<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.simple.manage.system.dao.OrgDao">
    <sql id="baseColumnList">
        org_id,
        org_name,
        parent_id,
        leader_id,
        org_order,
        org_note,
        exta,
        extb,
        create_id,
        create_time,
        update_id,
        update_time,
        is_delete,
        valid_sta
    </sql>

    <insert id="addOrUpdOrg" parameterType="java.util.Map" useGeneratedKeys="true" keyProperty="org_id">
        <selectKey keyProperty="count" resultType="int" order="BEFORE">
            select count(*) from t_orgmst where is_delete = '0' AND valid_sta ='0' AND org_id = #{org_id}
        </selectKey>
        <if test="count > 0">
            update t_orgmst
            <set>
                <if test="org_name != null and org_name != ''">
                    org_name = #{org_name},
                </if>
                <if test="parent_id != null">
                    parent_id = #{parent_id},
                </if>
                <if test="leader_id != null">
                    leader_id = #{leader_id},
                </if>
                <if test="org_order != null">
                    org_order = #{org_order},
                </if>
                <if test="org_note != null and org_note != ''">
                    org_note = #{org_note},
                </if>
                <if test="exta != null and exta != ''">
                    exta = #{exta},
                </if>
                <if test="extb != null and extb != ''">
                    extb = #{extb},
                </if>
                <if test="update_id != null">
                    update_id = #{update_id},
                </if>
                <if test="update_time != null">
                    update_time = #{update_time},
                </if>
                <if test="valid_sta != null and valid_sta != ''">
                    valid_sta = #{valid_sta},
                </if>
            </set>
            where org_id = #{org_id}
        </if>
        <if test="count == 0">
            insert into t_orgmst
            <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="org_name != null and org_name != ''">
                    org_name,
                </if>
                <if test="parent_id != null">
                    parent_id,
                </if>
                <if test="leader_id != null">
                    leader_id,
                </if>
                <if test="org_order != null">
                    org_order,
                </if>
                <if test="org_note != null and org_note != ''">
                    org_note,
                </if>
                <if test="exta != null and exta != ''">
                    exta,
                </if>
                <if test="extb != null and extb != ''">
                    extb,
                </if>
                <if test="create_id != null">
                    create_id,
                </if>
                <if test="create_time != null">
                    create_time,
                </if>
            </trim>
            <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="org_name != null and org_name != ''">
                    #{org_name},
                </if>
                <if test="parent_id != null">
                    #{parent_id},
                </if>
                <if test="leader_id != null">
                    #{leader_id},
                </if>
                <if test="org_order != null">
                    #{org_order},
                </if>
                <if test="org_note != null and org_note != ''">
                    #{org_note},
                </if>
                <if test="exta != null and exta != ''">
                    #{exta},
                </if>
                <if test="extb != null and extb != ''">
                    #{extb},
                </if>
                <if test="create_id != null">
                    #{create_id},
                </if>
                <if test="create_time != null">
                    #{create_time},
                </if>
            </trim>
        </if>
    </insert>

    <select id="queryOrg" parameterType="java.lang.Integer" resultType="java.util.Map">
        SELECT
            org_id AS id,
            org_name AS "name",
            parent_id AS "parentId",
            leader_id AS leader,
            org_order AS "order",
            org_note AS note,
            exta,
            extb
        FROM t_orgmst
        WHERE 1 = 1 AND is_delete = '0' AND valid_sta ='0'
        AND org_id = #{orgId}
    </select>

    <select id="queryOrgList" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            org_id AS id,
            org_name AS "name",
            parent_id AS "parentId",
            leader_id AS leader,
            org_order AS "order",
            org_note AS note,
            exta,
            extb
        FROM t_orgmst
        WHERE 1 = 1 AND is_delete = '0' AND valid_sta ='0'
        <if test="org_name != null and org_name != ''">
            AND org_name LIKE CONCAT('%', #{org_name}, '%')
        </if>
        <if test="parent_id != null">
            AND parent_id = #{parent_id}
        </if>
        ORDER BY org_order ASC
    </select>

    <resultMap id="getSelf" type="com.simple.manage.system.entity.Tree">
        <id property="key" column="org_id"></id>
        <result property="title" column="org_name"></result>
        <!--查到的id作为下次的pid-->
        <collection property="children" select="queryOrgRecursion" column="org_id"></collection>
    </resultMap>

    <select id="queryOrgRecursion" parameterType="java.lang.Integer" resultMap="getSelf">
        SELECT
            org_id,
            org_name
        FROM t_orgmst
        WHERE 1 = 1
        AND is_delete = '0'
        AND valid_sta ='0'
        AND parent_id = #{orgId}
        ORDER BY org_order ASC
    </select>
</mapper>